{
  "manifest_version": 3,
  "icons": {
    "16":  "small.ico",
    "48":  "img/medium.png",
    "128": "img/big.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "name": "Vivocha On The Fly",
    "default_icon": "small.ico",
    "default_popup": "config.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}